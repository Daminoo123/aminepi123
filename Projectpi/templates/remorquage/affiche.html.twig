{% extends 'baseback.html.twig' %}

{% block content %}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Remorquage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: blue;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: blue;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        .edit-btn, .delete-btn {
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .edit-btn:hover, .delete-btn:hover {
            background-color: #0056b3;
            color: white;
        }

        .delete-btn {
            background-color: #cc0000;
            color: white;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Etat Remorquage</th>
            <th>Lieu Accident</th>
            <th>Num User</th>
            <th>Actions</th>
        </tr>

        {% for a in Remorquage %}
        

        <tr>
            <td>{{ a.etatRemorquage }}</td>
            <td>{{ a.lieu_accident }}</td>
            <td>{{ a.num_user }}</td>
            <td>
                <a href="{{ path('app_edit_remorquage', {'ref': a.id}) }}" class="edit-btn">Edit</a>
                <a href="{{ path('app_delete_remorquage', {'ref': a.id}) }}" class="delete-btn">Delete</a>
            </td>
        </tr>
        {% endfor %}
    </table>
</body>

{% endblock  %}