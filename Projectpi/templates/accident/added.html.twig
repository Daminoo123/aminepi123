{% extends 'base.html.twig' %}

{% block content %}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accident Added</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            margin-top: 100px;
        }

        h1 {
            color: blue;
        }

        .btn {
            background-color: blue;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin: 20px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Accident Added</h1>
        <a href="{{ path('app_edit_accident', {'ref': accidentId}) }}" class="btn">Edit</a>
        <a href="{{ path('app_delete_accident', {'ref': accidentId}) }}" class="btn" onclick="return confirm('Are you sure you want to delete this accident?')">Cancel</a>
    </div>
</body>
{% endblock %}